<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE log4j:configuration SYSTEM "log4j.dtd">

<log4j:configuration xmlns:log4j="http://jakarta.apache.org/log4j/" debug="false">

    <appender name="trace" class="org.apache.log4j.DailyRollingFileAppender">
        <param name="File" value="${RWD_LOG_ROOT}/selfcare-trace.log"/>
        <param name="Threshold" value="debug"/>
        <param name="DatePattern" value="'.'yyyy-MM-dd"/>
        <layout class="org.apache.log4j.PatternLayout">
            <param name="ConversionPattern" value="%d{DATE}  %-5p  %c{1} - %m%n"/>
        </layout>
    </appender>

    <appender name="error" class="org.apache.log4j.DailyRollingFileAppender">
        <param name="File" value="${RWD_LOG_ROOT}/selfcare-error.log"/>
        <param name="Threshold" value="error"/>
        <param name="DatePattern" value="'.'yyyy-MM-dd"/>
        <layout class="org.apache.log4j.PatternLayout">
            <param name="ConversionPattern" value="%d{DATE}  %-5p %c{1} - %m%n"/>
        </layout>
    </appender>

    <appender name="audit" class="org.apache.log4j.DailyRollingFileAppender">
        <param name="File" value="${RWD_LOG_ROOT}/selfcare-audit.log"/>
        <param name="Threshold" value="info"/>
        <param name="DatePattern" value="'.'yyyy-MM-dd"/>
        <layout class="org.apache.log4j.PatternLayout">
            <param name="ConversionPattern" value="%d{DATE}  %-5p %c{1} - %m%n"/>
        </layout>
    </appender>


    <appender name="console" class="org.apache.log4j.ConsoleAppender">
        <layout class="org.apache.log4j.PatternLayout">
            <param name="ConversionPattern" value="%d - %m%n"/>
        </layout>
    </appender>

    <category name="error" additivity="false">
        <priority value="error"/>
        <appender-ref ref="error"/>
    </category>

    <category name="trace" additivity="false">
        <priority value="debug"/>
        <!-- This should change to info in production -->
        <appender-ref ref="trace"/>
    </category>

    <category name="audit" additivity="false">
        <priority value="info"/>
        <appender-ref ref="audit"/>
        <appender-ref ref="trace"/>
    </category>

    <category name="hms" additivity="false">
        <priority value="debug"/>
        <!-- This should change to info in production -->
        <appender-ref ref="trace"/>
        <appender-ref ref="error"/>
    </category>

    <category name="org" additivity="false">
        <priority value="error"/>
        <appender-ref ref="trace"/>
    </category>

    <category name="com" additivity="false">
        <priority value="error"/>
        <appender-ref ref="error"/>
    </category>

    <root>
        <priority value="debug"/>
        <!-- This should change to info in production -->
        <appender-ref ref="error"/>
        <appender-ref ref="trace"/>
    </root>

</log4j:configuration>
