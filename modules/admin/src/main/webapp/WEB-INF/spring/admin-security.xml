<?xml version="1.0" encoding="UTF-8"?>
<b:beans xmlns:b="http://www.springframework.org/schema/beans"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xmlns="http://www.springframework.org/schema/security"
         xsi:schemaLocation="http://www.springframework.org/schema/beans
              http://www.springframework.org/schema/beans/spring-beans.xsd
           ">

    <!--to enable web security services
    all URLs within the app is secured with ROLE_USER to access them-->
    <http auto-config='true'>
        <intercept-url pattern="/welcome*" access="ROLE_ADMIN" />
        <intercept-url pattern="/**" access="ROLE_USER" />
        <logout logout-url="/logout" logout-success-url="/logoutSuccess.jsp"/>
    </http>


    <b:alias name="filterChainProxy" alias="springSecurityFilterChain"/>
   <!-- <b:bean id="filterChainProxy" class="org.springframework.security.web.FilterChainProxy">
        <filter-chain-map >
            <filter-chain pattern="/**" filters="wrappingFilter"/>
        </filter-chain-map>
    </b:bean>-->

    <b:bean id="filterChainProxy" class="org.springframework.security.web.FilterChainProxy">
        <b:constructor-arg>
            <b:list>
                <filter-chain pattern="/do/not/filter*" filters="wrappingFilter"/>
                <!--<filter-chain pattern="/**" filters="filter1,filter2,filter3"/>-->
            </b:list>
        </b:constructor-arg>
    </b:bean>

