<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:context="http://www.springframework.org/schema/context"
       xmlns:mvc="http://www.springframework.org/schema/mvc"
       xsi:schemaLocation="http://www.springframework.org/schema/beans
       http://www.springframework.org/schema/beans/spring-beans-4.1.xsd
       http://www.springframework.org/schema/context
       http://www.springframework.org/schema/context/spring-context.xsd
       http://www.springframework.org/schema/mvc
       http://www.springframework.org/schema/mvc/spring-mvc.xsd">

       <context:component-scan base-package="hsl.devspace.app.admin.*" />
       <!--<mvc:resources mapping="/resources/**" location="/resources/" />-->

       <bean class="org.springframework.web.servlet.view.InternalResourceViewResolver">
              <!--<property name="prefix" value="/WEB-INF/views" />-->
              <property name="prefix" value="/WEB-INF/views/" />
              <property name="suffix" value=".jsp" />
       </bean>

      <mvc:resources mapping="/themes/**" location="/themes/" />
       <mvc:annotation-driven/>

       <!-- Initialization for data source -->
       <bean id="dataSource" class="com.mchange.v2.c3p0.ComboPooledDataSource" destroy-method="close">
              <property name="driverClass" value="${jdbc.driver}"/>
              <property name="jdbcUrl" value="${jdbc.url}"/>
              <property name="user" value="${jdbc.username}"/>
              <property name="password" value="${jdbc.password}"/>
       </bean>


       <!-- Definition for the UserRepositoryImpl bean -->
       <bean id="userRepository" class="hsl.devspace.app.admin.usermanagement.spring.repository.UserRepositoryImpl">
           <property name="dataSource" ref="dataSource" />
       </bean>

<!--
       <bean id="controller" class="hsl.devspace.app.admin.usermanagement.spring.controller.UserController">

       </bean>
-->


    <!--Definition for the ItemRepositoryImpl bean-->
    <bean id="itemRepository" class="hsl.devspace.app.admin.itemmanagement.spring.repository.ItemRepositoryImpl">
        <property name="dataSource" ref="dataSource" />
    </bean>
</beans>
