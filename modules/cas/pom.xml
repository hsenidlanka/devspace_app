        <dependency>
            <groupId>org.jasig.cas</groupId>
            <artifactId>cas-server-core</artifactId>
            <version>${cas.version}</version>
        </dependency>

        <dependency>
            <groupId>commons-dbcp</groupId>
            <artifactId>commons-dbcp</artifactId>
            <version>1.4</version>
        </dependency>

        <dependency>
            <groupId>commons-pool</groupId>
            <artifactId>commons-pool</artifactId>
            <version>1.6</version>
        </dependency>

        <dependency>
            <groupId>mysql</groupId>
            <artifactId>mysql-connector-java</artifactId>
            <version>5.1.38</version>
        </dependency>

    </dependencies>

    <build>
        <plugins>
            <plugin>
                <groupId>org.eclipse.jetty</groupId>
                <artifactId>jetty-maven-plugin</artifactId>
                <version>${maven-jetty-plugin.version}</version>
                <configuration>
                    <webApp>
                        <contextPath>/cas</contextPath>
                    </webApp>
                </configuration>
            </plugin>

            <!--maven dependency plugin-->
        <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-dependency-plugin</artifactId>
                <version>2.10</version>
                <executions>

                    <!--unpacking initial cas.war-->
                    <execution>
                        <id>unpack-cas.war</id>
                        <phase>package</phase>
                        <goals>
                            <goal>unpack</goal>
                        </goals>
                        <configuration>
                            <artifactItems>
                                <artifactItem>
                                    <groupId>org.jasig.cas</groupId>
                                    <artifactId>cas-server-webapp</artifactId>
                                    <version>${cas.version}</version>
                                    <type>war</type>
                                    <overWrite>true</overWrite>
                                    <outputDirectory>${basedir}/target/alternateLocation</outputDirectory>
                                    <destFileName>optional-new-name.war</destFileName>
                                    <includes>**/*.class,**/*.xml</includes>
                                   <!-- <excludes>**/*test.class</excludes>-->
                                </artifactItem>
                            </artifactItems>
                        </configuration>
                    </execution>

                    <!--copying dependencies to the lib folder-->
                    <execution>
                        <id>copy-dependencies</id>
                        <phase>package</phase>
                        <goals>
                            <goal>copy-dependencies</goal>
                        </goals>
                        <configuration>
                            <outputDirectory>${basedir}/target/alternateLocation/WEB-INF/lib</outputDirectory>
                            <overWriteReleases>false</overWriteReleases>
                            <overWriteSnapshots>true</overWriteSnapshots>
                            <excludeTransitive>true</excludeTransitive>
                        </configuration>
                    </execution>
                </executions>

            </plugin>

            <!--Copy plugin-->
            <plugin>
                <artifactId>maven-resources-plugin</artifactId>
                <version>3.0.1</version>
                <executions>

                    <!--copy cas.war file-->
                    <execution>
                        <id>copy-initial-cas.war</id>
                        <phase>validate</phase>
                        <goals>
                            <goal>copy-resources</goal>
                        </goals>
                        <configuration>
                            <overwrite>true</overwrite>
                            <outputDirectory>${basedir}/target</outputDirectory>
                            <resources>
                                <resource>
                                    <directory>${CAS.LOCATION}</directory>
                                </resource>
                            </resources>
                        </configuration>
                    </execution>


                    <!--copying & replacing modified files-->
                    <execution>
                        <id>copy-resources1</id>
                        <phase>process-resources</phase>
                        <goals>
                            <goal>copy-resources</goal>
                        </goals>
                        <configuration>
                            <overwrite>true</overwrite>
                            <outputDirectory>${basedir}/target/WEB-INF</outputDirectory>
                            <resources>
                                <resource>
                                    <directory>${basedir}/resources</directory>
                                    <filtering>true</filtering>
                                    <includes>
                                        <include>deployerConfigContext.xml</include>
                                        <include>casdatabase.properties</include>
                                        <include>web.xml</include>
                                    </includes>
                                </resource>
                            </resources>
                        </configuration>
                    </execution>

                    <execution>
                        <id>copy-jspViews</id>
                        <phase>process-resources</phase>
                        <goals>
                            <goal>copy-resources</goal>
                        </goals>
                        <configuration>
                            <overwrite>true</overwrite>
                            <outputDirectory>${basedir}/target/WEB-INF/view/jsp/default/ui</outputDirectory>
                            <resources>
                                <resource>
                                    <directory>${basedir}/jsp</directory>
                                    <filtering>true</filtering>
                                    <includes>
                                        <!--<include>casLoginView.jsp</include>-->
                                    </includes>
                                </resource>
                            </resources>
                        </configuration>
                    </execution>

                    <execution>
                        <id>copy-app-context</id>
                        <phase>process-resources</phase>
                        <goals>
                            <goal>copy-resources</goal>
                        </goals>
                        <configuration>
                            <overwrite>true</overwrite>
                            <outputDirectory>${basedir}/target/WEB-INF/spring-configuration</outputDirectory>
                            <resources>
                                <resource>
                                    <directory>${basedir}/src/spring-configuration</directory>
                                    <filtering>true</filtering>
                                    <includes>
                                        <include>applicationContext.xml</include>
                                    </includes>
                                </resource>
                            </resources>
                        </configuration>
                    </execution>

                   <!-- <execution>
                        <id>copy-resources22</id>
                        <phase>process-resources</phase>
                        <goals>
                            <goal>copy-resources</goal>
                        </goals>
                        <configuration>
                            <overwrite>true</overwrite>
                            <outputDirectory>${basedir}/target/alternateLocation/WEB-INF</outputDirectory>
                            <resources>
                                <resource>
                                    <directory>${basedir}/resources</directory>
                                    <filtering>true</filtering>
                                    <includes>
                                        <include>deployerConfigContext.xml</include>
                                        <include>casdatabase.properties</include>
                                        &lt;!&ndash;<include>web.xml</include>&ndash;&gt;
                                    </includes>
                                </resource>
                            </resources>
                        </configuration>
                    </execution>-->
                </executions>
            </plugin>


        </plugins>
        <finalName>cas</finalName>
    </build>

    <properties>
        <cs.dir>${basedir}</cs.dir>
    </properties>
</project>


