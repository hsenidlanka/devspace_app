<assembly xmlns="http://maven.apache.org/plugins/maven-assembly-plugin/assembly/1.1.3"
          xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
          xsi:schemaLocation="http://maven.apache.org/plugins/maven-assembly-plugin/assembly/1.1.3 http://maven.apache.org/xsd/assembly-1.1.3.xsd
http://maven.apache.org/plugins/maven-assembly-plugin/assembly/1.1.3">

    <!-- Output formats. -->
    <formats>
        <format>tar.gz</format>
    </formats>
    <includeBaseDirectory>false</includeBaseDirectory>

    <!-- Files to include in the output. -->
    <fileSets>
        <fileSet>
	    <!-- Path for the configuration files. -->
            <!-- <directory>../parent/src/main/resources</directory> -->
            <outputDirectory>conf</outputDirectory>
        </fileSet>
        <fileSet>
            <outputDirectory>logs</outputDirectory>
            <excludes>
                <!-- this will make folder empty. -->
                <exclude>**/*</exclude>
            </excludes>
        </fileSet>
        <fileSet>
            <directory>target/appassembler/bin</directory>
            <outputDirectory>bin</outputDirectory>
            <!-- Granting permissions. -->
            <directoryMode>0755</directoryMode>
            <fileMode>0755</fileMode>
        </fileSet>
    </fileSets>

    <!-- Copy jar files of dependencies to lib folder.  -->
    <dependencySets>
        <dependencySet>
            <useProjectArtifact>false</useProjectArtifact>
            <outputDirectory>lib</outputDirectory>
        </dependencySet>
    </dependencySets>
</assembly>
